#XF86MonBrightness{Up,Down}
#	backlight{-up,-down}
	
# Volume control
XF86Audio{RaiseVolume,LowerVolume}
        pamixer --sink alsa_output.pci-0000_1e_00.3.analog-stereo {-i,-d} 5

#XF86AudioMute
#	amixer set Master toggle



### ----- Dunst

# Close last notification
ctrl + space
	dunstctl close

# Close all notifications
ctrl + alt + space
	dunstctl close-all

# Show the last closed notification
ctrl + shift + space
	dunstctl history-pop



### ----- Rofi

# Rofi run
super + shift + d
        rofi -show run

# Rofi drun
super + d
        rofi -show drun



### ----- Missing Keys

ctrl + shift + z
	echo "<" | tr -d '\n' | xclip -selection clipboard

ctrl + shift + x
	echo ">" | tr -d '\n' | xclip -selection clipboard

ctrl + shift + 1
	echo "\`" | tr -d '\n' | xclip -selection clipboard

ctrl + shift + 2
	echo "~" | tr -d '\n' | xclip -selection clipboard



### ----- Misc shortcuts

# Open spotify
super + s
	spotify

# Open firefox
super + shift + f
	firefox

# Open file manager
super + e
	thunar

# Open xcolor
super + alt + c
	xcolor | xclip -selection clipboard

# Open terminal
super + Return
	kitty

# Open lockscreen
super + alt + l
    betterlockscreen --lock blur

# Take a screenshot
super + Print
	spectacle -bc

# Take a screenshot of a region
super + alt + s
	spectacle -bcr
